*filter
:INPUT ACCEPT [0:0]
:FORWARD ACCEPT [0:0]
:OUTPUT ACCEPT [0:0]
-A FORWARD -i tun0 -o eth1 -s 10.8.0.0/24 -d 10.3.0.0/16 -m state --state NEW -j ACCEPT
-A FORWARD -i tun0 -o eth0 -s 10.8.0.0/24 -m state --state NEW -j ACCEPT
-A FORWARD -i eth1 -o eth0 -s 10.3.0.0/16 -m state --state NEW -j ACCEPT
-A FORWARD -m state --state RELATED,ESTABLISHED -j ACCEPT
COMMIT
*nat
:INPUT ACCEPT [0:0]
:OUTPUT ACCEPT [0:0]
:PREROUTING ACCEPT [0:0]
:POSTROUTING ACCEPT [0:0]
-A POSTROUTING -o eth0 -s 10.8.0.0/24 -j MASQUERADE
-A POSTROUTING -o eth0 -s 10.3.0.0/16 -j MASQUERADE
COMMIT
